#template("xwikivars.vm")
#template("layoutvars.vm")
#template("htmlheader.vm")
#if($displayMainMenu)
    #template("menuview.vm")
#end
#if($viewer && $viewer!="view" && $viewer!="content")
    <!-- dedicated viewer: $viewer -->
#else
    #template("header.vm")
<div class="container" id="the-content">
    <div class="row" id="the-breadcrumb">
        <div class="col-md-8 col-xs-7">
            #ru_breadcrumb()
            #ru_getTOC()
            <div id="dropable-toc">
            </div>
        </div>
        <div class="col-md-4 col-xs-5">
            <ul class="list-inline text-right" id="the-pagination">
                #set($collPath="$!request.bc")##
                <li class="previous"><a href="/xwiki/bin/view/CurrikiCode/RespurrikiTocNavigate?current=${doc.fullName}&dir=prev#if($collPath!="")&collPath=$collPath#end"
                                        class="btn btn-default btn-xs paginate-next">&larr; Previous</a></li>
                <li class="next"><a href="/xwiki/bin/view/CurrikiCode/RespurrikiTocNavigate?current=${doc.fullName}&dir=next#if($collPath!="")&collPath=$collPath#end"
                                    class="btn btn-default btn-xs paginate-next">Next &rarr;</a></li>
            </ul>
        </div>
    </div>
<div class="row">
<div class="col-md-12" id="main-content">
#end
