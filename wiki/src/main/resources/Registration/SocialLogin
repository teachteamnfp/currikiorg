 $request.session.removeAttribute("SocialLoginTool")##
#end##
$tool.init($xwiki,$context,$request,$msg,$targets)##
#set($view=$tool.action($request))##
#macro(render)
    #if($view=="creationForm")#if($request.method=="POST")##
        $request.session.setAttribute("SocialLoginTool",$tool)##
        $tool.readProviderProfile()##
        $response.sendRedirect("http://$hostname/xwiki/bin/view/Registration/SocialLogin?xaction=creationForm&amp;$!request.getQueryString()")##
    #else##
        $tool.readProviderProfile()##
        $xwiki.includeForm("Registration.RegistrationBootstrap",false)##
    #end##
    #set($view="nothing")##
    #elseif($view=="bounceToProvider")#set($view=$tool.bounceToProvider($response))##
    #elseif($view=="processAuthReturn")&lt;!-- view: $view --&gt;#set($view=$tool.processAuthReturn())##
    #elseif($view=="createNewProfile")&lt;!-- view: $view --&gt;#set($view=$tool.tryCreateNewProfile())##
    #elseif($view=="backFromAuthorization")#set($redir=$tool.getNowTarget())#set($view="")#set($included=true)$xwiki.includeForm("Registration.BackFromAuthorization",false)##
    #elseif($view=="refused")#set($redir=$targets.noLogin)#set($included="true")$xwiki.includeForm("Registration.BackFromAuthorization",false)#set($view="")##
    #elseif($view=="pleaseDonate")##
        #if($tool.isCorporateAccount())#set($donateDoc="DonateCorp")#else#set($donateDoc="DonateNonCorp")#end
        ## HAVE TO REDIRECT WITH THE USER-NAME INCLUDED AND ONLY IF NOT CHROME
        #if($request.method=="POST" &amp;&amp; ! $request.getHeader("User-Agent").contains("Chrome"))##
            $request.session.setAttribute("SocialLoginTool",$tool)##
            $response.sendRedirect("/xwiki/bin/view/Registration/$donateDoc?xpage=popup&amp;framed=true&amp;xwikiname=$tool.username"))##
        #else##
            #set($user="$tool.username")##
            #set($view="")##
            #set($included=true)##
            $xwiki.includeForm("Registration.$donateDoc",false)##
        #end
    #elseif($view=="redirectOnTop")#set($redir=$tool.getNowTarget())#set($view="")$xwiki.includeForm("Registration.JumpToTop",false)##
    #elseif($view=="error")#foreach($e in $tool.errors)#error($e)#end
    #elseif($view=="nothing")##nothing
    #else&lt;!-- ${msg.get('xwiki.socialLogin.nothingToDo')} --&gt;
    #end##
#end##
